# .editorconfig for JS and Python project

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 3

# JavaScript and other JS-like files
[*.{js,ts,jsx,tsx,json}]
indent_style = space
indent_size = 2
